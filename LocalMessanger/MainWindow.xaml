<Window x:Class="LocalMessanger.MainWindow"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
       xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
       xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
       xmlns:local="clr-namespace:LocalMessanger"
       mc:Ignorable="d"
       Title="Server" Height="550" Width="1000" WindowStartupLocation="CenterScreen" WindowStyle="SingleBorderWindow">



    <Grid x:Name="MainGrid" Margin="10" Background="GhostWhite">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>

        <Label x:Name="ConnectedUserLabel" Content="Connected users:" HorizontalAlignment="Left" VerticalAlignment="Bottom"  />
        <Label x:Name="ServerLogLabel" Content="Server Log:" HorizontalAlignment="Left" VerticalAlignment="Bottom" Grid.Row="0" Grid.Column="1" />
        
        
        <ListBox x:Name="ConnectedUserListBox" 
                    Grid.Row="1" 
                    Grid.Column="0" 
                    Margin="10" 
                    Background="WhiteSmoke"
                    Foreground="Black"
                   
                    ItemsSource="{Binding ConnectedUsers}" >
            
        </ListBox>


        <TextBox x:Name="ServerLogTextBox"
                    Grid.Row="1"
                    Grid.Column="1"
                    Margin="10"
                    VerticalScrollBarVisibility="Auto"
                    HorizontalScrollBarVisibility="Auto"
                    IsReadOnly="True"
                    Background="WhiteSmoke"
                    Foreground="Black"
                    FontSize="14"
                    FontFamily="Consolas"
                    TextWrapping="Wrap"
                    AcceptsReturn="True"
                    AcceptsTab="True"
                    Text="{Binding ServerLog, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    VerticalAlignment="Stretch"
                    HorizontalAlignment="Stretch"
                 />

        <Button x:Name="StartStopServerButton" 
                Grid.Row="2" 
                Grid.Column="0" 
                Margin="10" 
                Width="160" 
                Height="30" 
                Content="Start Server" 
                Background="CornflowerBlue" 
                Foreground="White" 
                BorderThickness="2"
                BorderBrush="Gray"
                FontWeight="Bold" 
                HorizontalAlignment="Center" 
                VerticalAlignment="Center" 
                Click="StartStopServerButton_Click"/>



        <StackPanel x:Name="ButtonsStackPanel"
                    Grid.Row="2"
                    Grid.Column="1"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center">

            <Button x:Name="BroadcastButton"
                    Margin="10" 
                    Width="160" 
                    Height="30"
                    Content="Broadcast"
                    Background="CornflowerBlue" 
                    Foreground="White" 
                    BorderThickness="2"
                    BorderBrush="Gray"
                    FontWeight="Bold" 
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center" 
                    Click="BroadcastButton_Click"
                    />
            <Button x:Name="BanButton"
                    Margin="10" 
                    Width="160" 
                    Height="30"
                    Content="Ban user"
                    Background="CornflowerBlue" 
                    Foreground="White" 
                    BorderThickness="2"
                    BorderBrush="Gray"
                    FontWeight="Bold" 
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center" 
                    />
            <Button x:Name="UnbanButton"
                    Margin="10" 
                    Width="160" 
                    Height="30"
                    Content="Unban user"
                    Background="CornflowerBlue" 
                    Foreground="White" 
                    BorderThickness="2"
                    BorderBrush="Gray"
                    FontWeight="Bold" 
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center" 
                    />
            <Button x:Name="OpenDatabaseButton"
                    Margin="10" 
                    Width="160" 
                    Height="30"
                    Content="Open dataBase"
                    Background="CornflowerBlue" 
                    Foreground="White" 
                    BorderThickness="2"
                    BorderBrush="Gray"
                    FontWeight="Bold" 
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center" 
                    />


        </StackPanel>
                    

    </Grid>


    
</Window>
