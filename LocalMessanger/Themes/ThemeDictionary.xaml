<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  
    <FontFamily x:Key="AppFontFamily">Segoe UI</FontFamily>
    <FontWeight x:Key="NormalFontWeight">Normal</FontWeight>
    <FontWeight x:Key="BoldFontWeight">Bold</FontWeight>

    <sys:Double x:Key="SmallFontSize" xmlns:sys="clr-namespace:System;assembly=mscorlib">11</sys:Double>
    <sys:Double x:Key="NormalFontSize" xmlns:sys="clr-namespace:System;assembly=mscorlib">12</sys:Double>
    <sys:Double x:Key="LargeFontSize" xmlns:sys="clr-namespace:System;assembly=mscorlib">16</sys:Double>
    <sys:Double x:Key="HeaderFontSize" xmlns:sys="clr-namespace:System;assembly=mscorlib">24</sys:Double>

    <Thickness x:Key="SmallMargin">5</Thickness>
    <Thickness x:Key="NormalMargin">10</Thickness>
    <Thickness x:Key="LargeMargin">20</Thickness>

    <sys:Double x:Key="StandardButtonWidth" xmlns:sys="clr-namespace:System;assembly=mscorlib">100</sys:Double>
    <sys:Double x:Key="StandardButtonHeight" xmlns:sys="clr-namespace:System;assembly=mscorlib">30</sys:Double>
    <CornerRadius x:Key="StandardCornerRadius">6</CornerRadius>
    <CornerRadius x:Key="MessageBubbleCornerRadius">12</CornerRadius>


    <SolidColorBrush x:Key="OnlineStatusBrush" Color="Green"/>
    <SolidColorBrush x:Key="OfflineStatusBrush" Color="Gray"/>
    <SolidColorBrush x:Key="AwayStatusBrush" Color="Yellow"/>
    <SolidColorBrush x:Key="DoNotDisturbStatusBrush" Color="Red"/>
</ResourceDictionary>